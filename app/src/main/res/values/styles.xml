<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/bottomnavigation_underline</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <style name="time_category_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="picker_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>